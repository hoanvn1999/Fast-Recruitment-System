<section class="hero-wrap js-fullheight ftco-section">
  <div class="overlay"></div>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Sửa thông tin</h2>
				</div>
			</div>
			<div class="justify-content-center">
					<div class="login-wrap p-0">
            <%= form_for @user, url: users_path do |f| %>
              <div class="signin-form">
                <div class="row">
                  <div class="col-12 text-center">
                    <%= f.label :avatar do%>
                      <%= f.file_field :avatar, accept:"image/*", class:"d-none" %>
                      <% if current_user.avatar.attached? %>
                        <%= image_tag(current_user.avatar, alt: current_user.full_name, id:"output_image", class:"img-avt") %>
                      <% else %>
                        <%= image_tag("avatars/user-avt.png", alt: current_user.full_name, id:"output_image", class:"img-avt") %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.text_field :full_name, class: "form-control", placeholder: "#{t("register.full_name")}" %>
                    </div>
                    <div class="form-group">
                      <%= f.select :role, [[t("register.roles.candidate"), :candidate], [t("register.roles.recruiter"), :recruiter]], {}, class: "form-control" %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.text_field :phone_number, class: "form-control", placeholder: "#{t("register.phone")}" %>
                    </div>
                    <div class="form-group">
                      <%= f.date_field :date_of_birth, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.text_field :address, class: "form-control", placeholder: "#{t("register.address")}" %>
                    </div>
                  </div>
                </div>
                <div class="form-group row">
                  <span id="btn-register-prev" class="form-control btn btn-white col-5 mx-auto">Thoát</span>
                  <%= f.submit "Cập nhật", class: "form-control btn btn-primary submit px-3 col-5 mx-auto" %>
                </div>
              </div>
            <% end %>
		      </div>
			</div>
		</div>
	</section>
