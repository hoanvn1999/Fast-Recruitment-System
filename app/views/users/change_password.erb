<section class="hero-wrap js-fullheight ftco-section">
  <div class="overlay"></div>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section"><%= t "update.update_passwd" %></h2>
				</div>
			</div>
			<div class="justify-content-center">
					<div class="login-wrap p-0">
            <%= form_for @user, url: update_change_password_users_path do |f| %>
              <div class="signin-form">
                <div id="register-form-1" class="row justify-content-center">
                  <div class="col-md-6 col-lg-4">
                    <div class="form-group">
                      <%= f.password_field :old_password, class: "form-control", placeholder: "#{t("update.old_passwd")}", required: true %>
                      <span class="toggle-password" toggle="#user_old_password"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                    </div>
                    <div class="form-group">
                      <%= f.password_field :password, class: "form-control", placeholder: "#{t("login.passwd")}", required: true %>
                      <span class="toggle-password" toggle="#user_password"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                    </div>
                    <div class="form-group">
                      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "#{t("register.passwd_conf")}", required: true %>
                      <span class="toggle-password" toggle="#user_password_confirmation"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                    </div>
                    <div class="form-group">
                      <%= f.submit t("update.update_passwd"), class: "form-control btn btn-primary submit px-3" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
		      </div>
			</div>
		</div>
	</section>
