<section class="hero-wrap js-fullheight ftco-section">
  <div class="overlay"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section"><%= t "menu_list.register" %></h2>
      </div>
    </div>
    <div class="justify-content-center">
      <div class="login-wrap p-0">
        <%= form_for @user, url: users_path do |f| %>
          <%= f.hidden_field :email %>
          <div class="signin-form">
            <div id="register-form-2">
              <div class="row">
                <div class="col-12 text-center">
                  <%= f.label :avatar do%>
                    <%= f.file_field :avatar, accept:"image/*", class:"d-none" %>
                    <%= image_tag "avatars/user-avt.png", id:"output_image", class:"img-avt" %>
                  <% end %>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :full_name, class: "form-control", placeholder: "#{t("register.full_name")}", required: true %>
                  </div>
                  <div class="form-group">
                    <%= f.select :role, [[t("register.roles.candidate"), :candidate], [t("register.roles.recruiter"), :recruiter]], {}, class: "form-control" %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.text_field :phone_number, class: "form-control", placeholder: "#{t("register.phone")}", required: true %>
                  </div>
                  <div class="form-group">
                    <%= f.date_field :date_of_birth, class: "form-control", required: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.text_field :address, class: "form-control", placeholder: "#{t("register.address")}" %>
                  </div>
                </div>
              </div>
              <div class="form-group row mb-5">
                <%= f.submit t("menu_list.register"), class: "form-control btn btn-primary submit px-3 col-5 mx-auto" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
