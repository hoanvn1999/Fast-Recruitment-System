<%= render "institutions/wrap" %>

<% if @institution.id != 1 %>
  <nav class="nav nav-institution justify-content-center mb-5">
    <%= link_to t("institution.about_us"), institution_path(id: @institution.id), class: "nav-link active" %>
    <%= link_to t("institution.our_post"), jobs_institution_path(id: @institution.id), class: "nav-link" %>
    <% if current_user.institution_id == @institution.id %>
      <%= link_to t("institution.hr"), users_institution_path(id: @institution.id), class: "nav-link" %>
    <% end %>
  </nav>

  <section class="job-section company-section container">
    <div class="text row">
      <div class="col">
        <h2 class=><%= @institution.institution_name %></h2>
        <div class="row">
          <div class="col-sm-6 col-md-3">
            <% @phone_numbers.each do |phone_number| %>
              <div class=""><i class="fas fa-phone-volume"></i><%= phone_number.phone_number %></div>
            <% end %>
          </div>
          <div class="col-sm-6 col-md-9">
            <div><i class="fa fa-map-marker"></i><%= @institution.address %></div>
          </div>
        </div>
        <div class="row col-12">
          <div class="row col-12"><h3 class="mt-3 mb-3"><%= t "institution.intro" %></h3></div>
          <div class="row col-12"><%= @institution.description %></div>
        </div>
      </div>
    </div>
  </section>
<% end %>
