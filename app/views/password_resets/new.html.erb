<section class="hero-wrap js-fullheight ftco-section">
  <div class="overlay"></div>
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section"><%= t "login.forgot_passwd" %></h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
            <%= form_for :password_reset, url: password_resets_path do |f| %>
              <div class="signin-form">
                <div class="form-group">
                  <%= f.email_field :email, class: "form-control", placeholder: "#{t("login.username")}", required: true %>
                </div>
                <div class="form-group">
                  <%= f.submit t("login.btn_send_email"), class: "form-control btn btn-primary submit px-3" %>
                </div>
                <div class="form-group text-center ml-5">
                  <i class="fas fa-long-arrow-alt-right ml-5"></i>
                  <%= link_to t("menu_list.login"), login_path, class:"text-white" %>
                </div>
              </div>
            <% end %>
		      </div>
				</div>
			</div>
		</div>
	</section>
